<h2>Lista de Categorias</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova categoria</button></a>

{{#each categorias}} <!-- para cada categoria ele irá printar um card-->
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4> <!--Irá mostrar o nome como um titulo h4-->
            <small>Slug: {{nome}}</small> <!--irá mostrar o slug-->
            <small>Data de criação {{date}}</small><br><br> <!--Está puxando a data do arquivo Categoria.js-->
           <a href="/admin/categorias/edit/{{_id}}"> <button class="btn btn-success" mt-4>Editar</button></a>
           <form action="/admin/categorias/deletar" method="POST">
               <input type="hidden" name="id" value="{{_id}}"> 
               <button type="submit" class="btn btn-danger mt-2">Deletar</button>
           </form>
        </div>
    </div> 

{{else}}
    <div class="mt-4"><h4>Nenhuma categoria registrada</h4></div>
{{/each}}